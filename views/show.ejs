<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Nyaya-Setu | Evidence Repository</title>
  <style>
    :root {
      --primary: #1e3a8a;
      --secondary: #64748b;
      --success: #059669;
      --danger: #dc2626;
      --bg: #f1f5f9;
      --card-bg: #ffffff;
    }

    body {
      font-family: 'Inter', system-ui, -apple-system, sans-serif;
      background-color: var(--bg);
      color: #1e293b;
      margin: 0;
      padding: 2rem;
    }

    .header-container {
      display: flex;
      justify-content: space-between;
      align-items: center;
      max-width: 1200px;
      margin: 0 auto 2rem auto;
    }

    h1 {
      font-size: 1.75rem;
      color: var(--primary);
      margin: 0;
    }

    .btn-new {
      background: var(--primary);
      color: white;
      text-decoration: none;
      padding: 0.6rem 1.2rem;
      border-radius: 6px;
      font-weight: 600;
      font-size: 0.9rem;
      transition: opacity 0.2s;
    }

    .btn-new:hover { opacity: 0.9; }

    .table-container {
      max-width: 1200px;
      margin: 0 auto;
      background: var(--card-bg);
      border-radius: 12px;
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
      overflow-x: auto; /* Scroll for small screens */
    }

    table {
      width: 100%;
      border-collapse: collapse;
      text-align: left;
      font-size: 0.9rem;
    }

    th {
      background-color: #f8fafc;
      color: var(--secondary);
      font-weight: 600;
      text-transform: uppercase;
      font-size: 0.75rem;
      letter-spacing: 0.05em;
      padding: 1rem;
      border-bottom: 2px solid #e2e8f0;
    }

    td {
      padding: 1rem;
      border-bottom: 1px solid #f1f5f9;
      vertical-align: middle;
    }

    tr:hover { background-color: #f8fafc; }

    /* Hash Styling */
    .hash-cell {
      font-family: 'Courier New', monospace;
      background: #f1f5f9;
      padding: 0.3rem 0.5rem;
      border-radius: 4px;
      color: #475569;
      font-size: 0.8rem;
      max-width: 120px;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
      display: inline-block;
    }

    .cid-link {
      color: var(--success);
      font-weight: 600;
      text-decoration: none;
    }

    .cid-link:hover { text-decoration: underline; }

    .btn-delete {
      background: none;
      border: 1px solid #fecaca;
      color: var(--danger);
      padding: 0.4rem 0.8rem;
      border-radius: 4px;
      cursor: pointer;
      font-weight: 500;
      transition: all 0.2s;
    }

    .btn-delete:hover {
      background: var(--danger);
      color: white;
    }

    /* Badge for Case ID */
    .badge {
      background: #dbeafe;
      color: #1e40af;
      padding: 0.2rem 0.6rem;
      border-radius: 99px;
      font-weight: 600;
      font-size: 0.8rem;
    }
  </style>
</head>
<body>

  <div class="header-container">
    <h1>All Evidences</h1>
    <a href="/" class="btn-new">+ Log New Evidence</a>
  </div>

  <div class="table-container">
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Case ID</th>
          <th>Officer ID</th>
          <th>File Name</th>
          <th>File Hash</th>
          <th>IPFS CID</th>
          <th>Blockchain Tx</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% evidences.forEach(e => { %>
          <tr>
            <td><strong>#<%= e.id %></strong></td>
            <td><span class="badge"><%= e.caseId %></span></td>
            <td><%= e.officerId %></td>
            <td><%= e.fileName %></td>
            <td><span class="hash-cell" title="<%= e.fileHash %>"><%= e.fileHash %></span></td>
            <td>
              <a href="https://ipfs.io/ipfs/<%= e.ipfsCID %>" target="_blank" class="cid-link">
                View on IPFS
              </a>
            </td>
            <td><span class="hash-cell" title="<%= e.blockchainTxHash %>"><%= e.blockchainTxHash %></span></td>
            <td>
              <form action="/evidence/delete/<%= e.id %>" method="POST" onsubmit="return confirm('Archive this record?')">
                <button type="submit" class="btn-delete">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

</body>
</html>